:css
  label { display: block; font-weight: normal; }

.col-sm-8
  %h1{:style => 'margin-bottom: 5px;'}
    = @organization.name
  
  - if @organization.locations.present?
    %div{:style => 'margin-top: 0;'}
      - @organization.locations.each do |location|
        = location.name
    
  %div{:style => 'margin-top: 0;'}
    = @organization.description

  %br
  %h3
    %b
      Members

    - if signed_in?
      %span{:style => 'font-weight: normal; font-size: 0.8em; padding-left: 5px;'}
        %a{:onclick => "$('.add_member').toggle();", :class => 'add_member'}
          add
    
  - if signed_in?    
    .add_member{:style => 'display:none;'}
      = form_for Membership.new, :html => {:class => 'form-inline'} do |f|
        = f.hidden_field :user_id, :value => current_user.id
        = f.hidden_field :belongable_id, :value => @organization.id
        = f.hidden_field :belongable_id, :value => @organization.id
        = f.hidden_field :belongable_type, :value => Organization.to_s
      
        = f.label :user_id, :class => 'sr-only'
        = f.select :user_id, options_from_collection_for_select(User.all, :id, :name), :class => 'form-control'
      
        &nbsp;
        = f.submit "Go", :id => 'membership_submit', :class => 'btn btn-default'
      
        &nbsp;&nbsp;
        %a{:href => '#', :onclick => "$('.add_member').toggle()"}
          Cancel
      
  %ul.list-unstyled
    - if @organization.people.present?
      - @organization.people.each do |person|
        %li
          = link_to person.name, people_path(person, person.name.parameterize)
    - else
      %li
        None, yet.
      
  %br
  %h3
    %b
      Documents
    %span{:style => 'font-weight: normal; font-size: 0.8em; padding-left: 5px;'}
      = link_to 'add', new_document_path(l: @organization.id)
    
  - if @organization.documents.present?
    %div
      %ul{:class => 'list-unstyled'}
        - @organization.documents.each do |document|
          %li
            = link_to document.name, slugged_document_path(document.id, document.name.parameterize)
          
  %br
  %h3
    %b
      Comments
  
  #comments
    = render partial: '/comments/show', locals: { :resource => @organization }