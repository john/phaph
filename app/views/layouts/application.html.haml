            -# %li{:class => (controller_name == 'grants' || controller_name == 'categories') ? 'active' : ''}
            -#   = link_to 'Grants', grants_path
            -#
            -# %li{:class => (controller_name == 'samples') ? 'active' : ''}
            -#   = link_to 'Samples', samples_path
              
            -# %li{:class => (controller_name == 'papers') ? 'active' : ''}
            -#   = link_to 'Documents', documents_path
              
            -# %li
            -#
            -#   = form_tag( search_documents_path, :method => :get, :class => 'form-horizontal', :role => 'form', :style => 'margin-top: 15px;') do
            -#     = text_field_tag 'q', (params[:q].present? ? params[:q] : '')
            -#     = submit_tag 'Search', :class => 'btn btn-xs'
                
                
          -# %li.dropdown
          -#     %a.dropdown-toggle{:'data-toggle' => 'dropdown'}
          -#       Dropdown
          -#       %span.caret
          -#     %ul.dropdown-menu{:role => 'menu'}
          -#       %li
          -#         %a{:href => '#'} Something
          -#       %li
          -#         %a{:href => '#'} Something else
          -#       %li
          -#         %a{:href => '#'} Another something
          -#       %li.divider
          -#       %li.dropdown-header Nav header
          -#       %li
          -#         %a{:href => '#'} Something further
                  
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                = link_to 'Your documents', documents_path, :style => 'font-weight: bold;'
              %li
                = link_to 'upload', new_document_path
              -# %li
              -#   = link_to 'import', import_documents_path
              
              %li.dropdown
                %a.dropdown-toggle{:'data-toggle' => 'dropdown'}
                  = current_user.name
                  %span.caret
                %ul.dropdown-menu{:role => 'menu'}
                  %li
                    = link_to "Your profile", people_path(current_user.id, current_user.name.parameterize)
                    -# = link_to "Your documents", documents_path
                    = link_to "Sign out", destroy_user_session_path, :method => :delete
            - else
              %li
                = link_to "Sign in", new_user_session_path
              %li
                = link_to "Sign up", new_user_registration_path
    
    .container
      
      = content_tag(:div, flash[:error], :id => "error", :class => "bg-warning") if flash[:error]
      = content_tag(:div, flash[:notice], :id => "notice", :class => "bg-success") if flash[:notice]
      = content_tag(:div, flash[:alert], :id => "alert", :class => "bg-danger") if flash[:alert]
      
      = yield
      