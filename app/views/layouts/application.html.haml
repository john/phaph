%html{:lang => "en"}
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    
    %meta{:name => 'viewport', :content => 'initial-scale=1.0, width=device-width'}
    %meta{:name => 'description', :content => 'Phaph: holds your science.'}
    %meta{:name => 'author', :content => 'John McGrath'}
    %meta{:content => "Phaph", :property => "og:title"}
    %meta{:content => "Phap. For science!", :property => "og:description"}
    %meta{:content => "//phaph.png", :property => "og:image"}
    %meta{:content => "//www.phaph.com", :property => "og:url"}
    
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
    
    %title= (Rails.env == 'development' ? '[DEV] ' : '') + (@title ? @title : 'Phaph')
    
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css'
    -# = stylesheet_link_tag 'http://bootswatch.com/simplex/bootstrap.min.css'
    -# = stylesheet_link_tag 'http://bootswatch.com/spacelab/bootstrap.min.css'
    
    -# = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'app'
    
    
    <link href='http://fonts.googleapis.com/css?family=Bubblegum+Sans' rel='stylesheet' type='text/css'>
    
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/fonts/glyphicons-halflings-regular.svg'
    
    -# HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    <!--[if lt IE 9]>
    = javascript_include_tag '//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'
    = javascript_include_tag '//oss.maxcdn.com/respond/1.4.2/respond.min.js'
    <![endif]-->
    
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'
    
    <!--[if lte IE 8]>
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/flot/0.8.2/excanvas.min.js'
    <![endif]-->
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/flot/0.8.2/jquery.flot.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/flot/0.8.2/jquery.flot.time.min.js'
    
    = csrf_meta_tags
    
  %body{:role => 'document'}
    
    .navbar.navbar-default.navbar-static-top{:role => 'navigation'}
      .container
        .navbar-header
          %button.navbar-toggle{:type => 'button', :'data-toggle' => 'collapse', :'data-target' => '.navbar-collapse'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'phaph', root_path, class: 'navbar-brand', style: "font-family: 'Bubblegum Sans', cursive; color: #B80000; font-size: 1.8em;"
          
        .navbar-collapse.collapse
          
          = render :partial => 'shared/search_form'
          
          %ul.nav.navbar-nav
            %li
              -# = render :partial => 'shared/search_form'
            -# %li{:class => (controller_name == 'users') ? 'active' : ''}
            -#   = link_to 'Users', users_path
            
            -# %li{:class => (controller_name == 'labs') ? 'active' : ''}
