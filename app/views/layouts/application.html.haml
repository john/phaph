%html{:lang => "en"}
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    
    %meta{:name => 'viewport', :content => 'initial-scale=1.0, width=device-width'}
    %meta{:name => 'description', :content => 'Phaph: holds your science.'}
    %meta{:name => 'author', :content => 'John McGrath'}
    %meta{:content => "Phaph", :property => "og:title"}
    %meta{:content => "Phap. For science!", :property => "og:description"}
    %meta{:content => "//phaph.png", :property => "og:image"}
    %meta{:content => "//www.phaph.com", :property => "og:url"}
    
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
    
    %title= (Rails.env == 'development' ? '[DEV] ' : '') + (@title ? @title : Rails.configuration.x.app_name)
    
    <link href="//fonts.googleapis.com/css?family=Lato:400,700" media="screen" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Roboto:900,700" media="screen" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" media="screen" rel="stylesheet" />
    
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
