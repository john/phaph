!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    
    %meta{:name => 'viewport', :content => 'initial-scale=1.0, width=device-width'}
    %meta{:name => 'description', :content => 'Lab Management System'}
    %meta{:name => 'author', :content => 'John McGrath'}
    %meta{:content => "Erlenmeyer", :property => "og:title"}
    %meta{:content => "Lab Management System", :property => "og:description"}
    %meta{:content => "//og_erlenmeyer.png", :property => "og:image"}
    %meta{:content => "//www.erlenmeyer.co", :property => "og:url"}
    
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
    
    %title= (Rails.env == 'development' ? '[DEV] ' : '') + (@title ? @title : 'Erlenmeyer')
    
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css'
    -# = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/fonts/glyphicons-halflings-regular.svg'
    
    
    
    -# HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    <!--[if lt IE 9]>
    = javascript_include_tag '//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'
    = javascript_include_tag '//oss.maxcdn.com/respond/1.4.2/respond.min.js'
    <![endif]-->
    
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'
    
    = csrf_meta_tags
    
  %body{:role => 'document'}
  
    .navbar.navbar-inverse.navbar-static-top{:role => 'navigation'}
      .container
        .navbar-header
          %button.navbar-toggle{:type => 'button', :'data-toggle' => 'collapse', :'data-target' => '.navbar-collapse'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Erlenmeyer', root_path, :class => 'navbar-brand'
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => users_path} Users
            %li
              %a{:href => labs_path} Labs
            %li.dropdown
            %li
              %a{:href => grants_path} Grants
            %li.dropdown
          -#     %a.dropdown-toggle{:'data-toggle' => 'dropdown'}
          -#       Dropdown
          -#       %span.caret
          -#     %ul.dropdown-menu{:role => 'menu'}
          -#       %li
          -#         %a{:href => '#'} Something
          -#       %li
          -#         %a{:href => '#'} Something else
          -#       %li
          -#         %a{:href => '#'} Another something
          -#       %li.divider
          -#       %li.dropdown-header Nav header
          -#       %li
          -#         %a{:href => '#'} Something further
                  
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{:'data-toggle' => 'dropdown'}
                  Hey #{current_user.name}
                  %span.caret
                %ul.dropdown-menu{:role => 'menu'}
                  %li
                    = link_to "Sign out", destroy_user_session_path, :method => :delete
            - else
              %li
                = link_to "Sign in", new_user_session_path
              %li
                = link_to "Sign up", new_user_registration_path
    
    .container
      
      = content_tag(:div, flash[:error], :id => "error") if flash[:error]
      = content_tag(:div, flash[:notice], :id => "notice") if flash[:notice]
      = content_tag(:div, flash[:alert], :id => "alert") if flash[:alert]
      
      = yield
