= form_for @document, :role => 'form', :html => {:class => 'form-horizontal'} do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this paper from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :creator_id
  - if params[:l].present?
    = hidden_field_tag :redirect_to, lab_path( params[:l] )
    
  .form-group
    .col-sm-7
      = f.label :name, :class => 'sr-only'
      = f.text_field :name, class: 'form-control', placeholder: 'Document name', autofocus: true
    
    
  .form-group
    .col-sm-7
      = f.label :original, :class => 'sr-only'
      = f.file_field :original, class: 'form-control'
      
  .form-group
    = f.label :description, :class => 'sr-only'
    .col-sm-7
      = f.text_area :description, class: 'form-control', placeholder: 'Description'
      
  .form-group
    .col-sm-7
      = f.label :source, :class => 'sr-only'
      = f.text_field :source, class: 'form-control', placeholder: 'Source'
      
  .form-group
    .col-sm-7
      = f.label :source, :class => 'sr-only'
      = f.text_field :journal, class: 'form-control', placeholder: 'Journal'
      
  .form-group
    .col-sm-7
      = f.label :source, :class => 'sr-only'
      = f.text_field :principle_authors, class: 'form-control', placeholder: 'Principle authors'
      
  .form-group
    .col-sm-7
      = f.label :other_authors, :class => 'sr-only'
      = f.text_field :other_authors, class: 'form-control', placeholder: 'Other authors'
      
  .form-group
    .col-sm-7
      = f.label :rights, :class => 'sr-only'
      = f.text_field :rights, class: 'form-control', placeholder: 'Other authors'
      
  .field
    = f.label :published_at
    = f.datetime_select :published_at

  .form-group
    .col-sm-7
      = f.label :grant_id, :class => 'sr-only'
      Grant: &nbsp;
      = f.select :grant_id, options_from_collection_for_select(current_user.grants, :id, :name, @document.grant_id), :class => 'form-control', include_blank: '-- Select a grant --'


  - if action_name == 'edit'
    .form-group
      .col-sm-7
        = f.label :lab_id, :class => 'sr-only'
        Lab: &nbsp;
        = f.select :lab_id, options_from_collection_for_select(current_user.labs, :id, :name, @document.lab_id), :class => 'form-control', include_blank: '-- Select a lab --'
  - else
    = f.hidden_field :lab_id
  
  .form-group
    .col-sm-7
      = f.label :state, :class => 'sr-only'
      State: &nbsp;
      = f.select :state, options_for_select(Grant::STATES, @document.state), :class => 'form-control'
      
  .form-group
    .col-sm-7
      = f.submit 'Save', :class => 'btn btn-primary'
