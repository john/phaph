%h1
  Sign in
  
%hr

.row
  .col-sm-4
    <a class="btn btn-block btn-social btn-twitter" href="#{user_omniauth_authorize_url(:twitter)}">
    <i class="fa fa-twitter"></i> Sign in with Twitter
    </a>

%br
&mdash; OR &mdash;
%br
%br

= form_for(resource, as: resource_name, url: session_path(resource_name), :role => 'form', :html => {:class => 'form-horizontal'} ) do |f|

  .form-group
    .col-sm-7
      = f.label :email, :class => 'sr-only'
      = f.email_field :email, class: 'form-control', :placeholder => 'Your email'

  .form-group
    .col-sm-7
      = f.label :password, :class => 'sr-only'
      = f.password_field :password, autocomplete: "off", class: 'form-control', :placeholder => 'Password'

  - if devise_mapping.rememberable?
    .form-group
      .col-sm-7
        #{f.check_box :remember_me} #{f.label :remember_me}

  .form-group
    .col-sm-7
      = f.submit "Sign in", class: 'btn btn-primary', data: { disable_with: 'Signing in...' }

-# = link_to 'Sign in with Dropbox', user_omniauth_authorize_url(:dropbox_oauth2), class: 'btn btn-primary', data: { disable_with: 'Signing in...' }

%br

%div
  = link_to "Forgot password?", new_password_path(resource_name)
%div
  = link_to "Didn't receive confirmation?", new_confirmation_path(resource_name)
