%h2{ :style => 'margin-bottom: 30px;'}
  Sign in

= form_for(resource, as: resource_name, url: session_path(resource_name), :role => 'form', :html => {:class => 'form-horizontal'} ) do |f|

  .form-group
    .col-sm-7
      = f.label :email, :class => 'sr-only'
      = f.email_field :email, class: 'form-control', :placeholder => 'Your email'

  .form-group
    .col-sm-7
      = f.label :password, :class => 'sr-only'
      = f.password_field :password, autocomplete: "off", class: 'form-control', :placeholder => 'Password'

  - if devise_mapping.rememberable?
    .form-group
      .col-sm-7
        #{f.check_box :remember_me} #{f.label :remember_me}
        
  .form-group
    .col-sm-7
      = f.submit "Sign in", :class => 'btn btn-primary'
      
      

&mdash; OR &mdash;

.clearfix

%br
= link_to 'Sign in with Dropbox', user_omniauth_authorize_url(:dropbox), :class => 'btn btn-primary'

